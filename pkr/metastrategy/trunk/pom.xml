<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ai.pkr</groupId>
    <artifactId>metastrategy</artifactId>
    <version>2.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <parent>
        <groupId>ai.bds</groupId>
        <artifactId>pom-net</artifactId>
        <version>1.2.0-SNAPSHOT</version>
    </parent>

    <name>Package ai.pkr:metastrategy</name>
    <description>
        This package contains classes and algorithms to help building poker strategies.
        The intention is to create game-invariant algorithms. It allows to easily test
        them in simple model games and than apply either to directly solve real games or
        to verify specialized and optimized algorithms for real games.
        This package also contains a couple of model games that have been extensively studied,
        like Kuhn poker.
    </description>
    <!--<url></url>-->

    <properties>
        <ai.ver.major>2</ai.ver.major>
        <ai.ver.minor>0</ai.ver.minor>
        <ai.ver.revision>0</ai.ver.revision>
        <ai.ver.qualifier>SNAPSHOT</ai.ver.qualifier>
        <!-- Default build configuration. To override, call mvn -Dai.build.config=Name. -->
        <ai.build.config>Release</ai.build.config>
        <!-- Optional list of target files that will be buld, without extension.
             These values can be used somewhere else, for instance in assembly descriptor.
        -->
        <ai.build.target1>${project.groupId}.metastrategy</ai.build.target1>
        <ai.build.target2>pkrtree</ai.build.target2>
        <ai.build.target3>pkrcmpct</ai.build.target3>
        <ai.build.target4>pkranct</ai.build.target4>
        <ai.build.target5>eqlp</ai.build.target5>
        <ai.build.target6>pkrbr</ai.build.target6>
        <ai.build.target7>pkranst</ai.build.target7>
    </properties>

    <dependencies>
        <dependency>
            <groupId>ai.3rd-party.org.apache.logging</groupId>
            <artifactId>log4net-redist</artifactId>
            <version>[1.2.10,]</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>ai.lib</groupId>
            <artifactId>utils</artifactId>
            <version>[3.*,4.0.0)</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>ai.lib</groupId>
            <artifactId>algorithms</artifactId>
            <version>[3.*,4.0.0)</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>ai.pkr</groupId>
            <artifactId>metagame</artifactId>
            <version>[3.*,4.0.0)</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>ai.pkr</groupId>
            <artifactId>metabots</artifactId>
            <version>[3.*,4.0.0)</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>ai.3rd-party.net.sourceforge.lpsolve</groupId>
            <artifactId>lpsolve-dev-win32-redist</artifactId>
            <version>[5.5.*,]</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>ai.3rd-party.net.sourceforge.lpsolve</groupId>
            <artifactId>lpsolve-dev-win64-redist</artifactId>
            <version>[5.5.*,]</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>ai.3rd-party.net.sourceforge.lpsolve</groupId>
            <artifactId>lpsolve-cs-net-redist</artifactId>
            <version>[5.5.*,]</version>
            <type>zip</type>
        </dependency>
        <dependency>
            <groupId>ai.3rd-party.com.mathdotnet</groupId>
            <artifactId>MathNet.Iridium-redist</artifactId>
            <version>[2008.8.16.470,]</version>
            <type>zip</type>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>code-coverage</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>instrument-coverage1</id>
                                <phase>process-test-classes</phase>
                                <configuration>
                                    <executable>vsinstr</executable>
                                    <arguments>
                                        <argument>${project.basedir}/target/dist/${ai.build.config}/${ai.build.target1}.dll</argument>
                                        <argument>/COVERAGE</argument>
                                    </arguments>
                                </configuration>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>test</id>
                        <phase>test</phase>
                        <configuration>
                            <executable>nunit-console</executable>
                            <arguments>
                                <argument>/xml=${project.basedir}/target/test-reports/${ai.build.target1}.nunit.xml</argument>
                                <argument>/exclude=${ai.nunit.exclude}</argument>
                                <argument>${project.basedir}/target/dist/${ai.build.config}/${ai.build.target1}.nunit.dll</argument>
                            </arguments>
                            <skip>${skipTests}</skip>
                        </configuration>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <scm>
        <connection>scm:svn:http://ai.dyndns.biz/svn/aidev/ai/pkr/metastrategy/trunk</connection>
    </scm>
</project>