<?xml version="1.0" encoding="utf-8"?>
<SessionSuiteCfg xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns="ai.pkr.metabots.SessionSuiteCfg.xsd">
    <!-- An example of seat-permutation configuration -->
    <Name>demo-ss</Name>
    <LocalPlayers>
        <LocalPlayerCfg>
            <Name>RaiserBot1</Name>
            <Assembly></Assembly>
            <Type>ai.pkr.metabots.bots.RaiserBot</Type>
        </LocalPlayerCfg>
        <LocalPlayerCfg>
            <Name>RandomBot1</Name>
            <Type>ai.pkr.metabots.bots.RandomBot</Type>
        </LocalPlayerCfg>
        <LocalPlayerCfg>
            <Name>CallerBot1</Name>
            <Type>ai.pkr.metabots.bots.CallerBot</Type>
        </LocalPlayerCfg>
    </LocalPlayers>
    <Sessions>
        <SessionCfg>
            <Name>sp-vs-raiser</Name>
            <GameDefinitionFile>${loc.xml.Dir}gamedef-demo.xml</GameDefinitionFile>
            <Kind>RingGameWithSeatPermutations</Kind>
            <RepeatCount>100</RepeatCount>
            <GamesCount>100</GamesCount>
            <Players>
                <PlayerSessionCfg>
                    <Name>RandomBot1</Name>
                </PlayerSessionCfg>
                <PlayerSessionCfg>
                    <Name>RaiserBot1</Name>
                </PlayerSessionCfg>
            </Players>
        </SessionCfg>
        <SessionCfg>
            <Name>sp-vs-caller</Name>
            <GameDefinitionFile>${loc.xml.Dir}gamedef-demo.xml</GameDefinitionFile>
            <Kind>RingGameWithSeatPermutations</Kind>
            <RepeatCount>1000</RepeatCount>
            <GamesCount>200</GamesCount>
            <Players>
                <PlayerSessionCfg>
                    <Name>RandomBot1</Name>
                </PlayerSessionCfg>
                <PlayerSessionCfg>
                    <Name>CallerBot1</Name>
                </PlayerSessionCfg>
            </Players>
        </SessionCfg>
    </Sessions>
</SessionSuiteCfg>
